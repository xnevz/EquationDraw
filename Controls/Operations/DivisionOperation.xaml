<l:Number x:Class="EquationDraw.DivisionOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="clr-namespace:EquationDraw" x:Name="control"
             mc:Ignorable="d">
    <StackPanel>
        <ContentPresenter HorizontalAlignment="Center" Content="{Binding Top, ElementName=control}" Margin="10" />
        <Line X1="0" X2="1" Y1="0" Y2="0" Stretch="Fill" StrokeThickness="2" Stroke="{StaticResource LightColorBrush}"
                  StrokeStartLineCap="Round" StrokeEndLineCap="Round" Height="2"  Width="{Binding ActualWidth, ElementName=control}"
                  RenderTransformOrigin=".5,.5"/>
        <ContentPresenter HorizontalAlignment="Center" Content="{Binding Bottom, ElementName=control}" Margin="10"/>
        </StackPanel>
</l:Number>
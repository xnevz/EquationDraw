<l:BaseBinaryOperation x:Class="EquationDraw.BinaryOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:EquationDraw"
             x:Name="control"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ContentPresenter VerticalAlignment="Center" Name="top" Content="{Binding Left, ElementName=control}" Margin="0 0 5 0"/>
            <ContentPresenter Content="{Binding Separator, ElementName=control}"/>
            <ContentPresenter VerticalAlignment="Center" Name="bottom" Content="{Binding Right, ElementName=control}" Margin="5 0 0 0"/>
        </StackPanel>
    </Grid>
</l:BaseBinaryOperation>
